@{
    ViewData["Title"] = "Добавить департамент";
}

<div class="container col-6 align-items-center mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <form method="post" asp-controller="Department" asp-action="Create">
        <div class="form-group">
            <label for="dName">Название:</label>
            <input type="text" class="form-control" id="dName" name="dName" required>
        </div>
        <button type="submit" class="btn btn-secondary">Добавить</button>
    </form>
</div>