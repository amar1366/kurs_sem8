@model lab4.Storage.Entity.University
@{
    ViewData["Title"] = "Добавить университет";
}

<div class="container col-6 align-items-center mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <form method="post" asp-controller="University" asp-action="Update">
        <div class="form-group">
            <label for="uName">Название:</label>
            <input class="form-control" type="text" id="uName" name="uName" value="@Model.uName" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="hidden" name="id" value="@Model.uNomber" />
        </div>
        <button type="submit" class="btn btn-secondary">Обновить</button>
    </form>
</div>
