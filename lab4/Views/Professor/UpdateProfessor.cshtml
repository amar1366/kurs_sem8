@model lab4.Storage.Entity.Professor
@{
    ViewData["Title"] = "Редактировать профессора";
}

<div class="container col-6 align-items-center mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <form method="post" asp-controller="Professor" asp-action="Update">
        <div class="form-group">
            <label for="surname">Фамилия:</label>
            <input class="form-control" type="text" name="surname" id="surname" value="@Model.surname" required />
        </div>
        <div class="form-group">
            <label for="name">Имя:</label>
            <input class="form-control" type="text" name="name" id="name" value="@Model.name" required />
        </div>
        <div class="form-group">
            <label for="middlename">Отчество:</label>
            <input class="form-control" type="text" name="middlename" id="middlename" value="@Model.middlename" required />
        </div>
        <div class="form-group">
            <label for="birthday">Дата рождения:</label>
            <input class="form-control" type="date" name="birthday" id="birthday" value="@Model.birthday.ToString("yyyy-mm-dd")" required />
        </div>
        <div class="form-group">
            <input class="form-control" type="hidden" name="id" value="@Model.pNomber" required />
        </div>
        <button type="submit" class="btn btn-secondary">Обновить</button>
    </form>
</div>
